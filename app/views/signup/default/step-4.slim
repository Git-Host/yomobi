= render :partial => 'signup-step-arrows', :locals => { :step => 4 }

#account-setup-box.center-box
  .content
    h2 ==t'account_setup.final.title'
    h3 ==t'account_setup.final.site_online'

    h4 ==t'account_setup.final.site_url_header'
    p 
    	==t'account_setup.final.site_url'
    	a target="preview-mobile-site" href=@company.mobile_url 
    		=@company.mobile_url
    	' .

    h4 ==t'account_setup.final.auto_redirect_header'
    p ==t'account_setup.final.auto_redirect'

    h4 ==t'account_setup.final.easy_update_header'
    p ==t'account_setup.final.easy_update'

    h4 ==t'account_setup.final.help_header'
    p ==t'account_setup.final.help'

    h4 ==t'account_setup.final.customize_header'
    p ==t'account_setup.final.customize'
    br
    br

  .action-bar
    form action=builder_main_path method="GET"
      .rfloat.main-btn
        input.content type="submit" value=t'account_setup.button.goto_builder'
    .clearfix
