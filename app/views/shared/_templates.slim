#templates

  script.home-icon(type="text/template")
    .icon{ style="background-image: url(/images/widgets/{{ name }}.png)" }
    .title {{ prettyName }}
  
  script.mapp-header(type="text/template")
    .logo{ style="background-image: url(/sample-data/{{ name }}/logo.png)" }
    .name {{ prettyName }}
    .clearfix

  script.custom_page-page(type="text/template")
    .content
      | {{ content }}
  
  script.edit-widget(type="text/template")
    .icon{ style="background-image: url(/images/widgets/{{ name }}.png)" }
    .name {{ name }}
    p.help-text {{ helpText }}
    .edit-area {{ editAreaContent }}

    .action-bar
      .accept-btn.main-btn
        .content Save Changes
      .checkmark
      .loader
      .cancel-btn.alt-btn
        .content Discard Changes
      a.remove-link(href="#") Remove Widget

  script.full-website-edit-area(type="text/template")
    label Enter your website address [e.g. www.mysite.com]
    input(name="url" type="text" value="{{ _maybe.url }}")
  
  script.about-us-edit-area(type="text/template")
    label Enter your website address [e.g. www.mysite.com]
    textarea(name="content" cols="50" rows="8")
      | {{ _maybe.content }}
  
  script.sidebar-widget(type="text/template")
    .sidebar.home-icon data-name="{{ name }}" data-wtype="{{ wtype }}"
      .icon{ style="background-image: url(/images/widgets/{{ name }}.png)" }
      .title {{ prettyName }}
