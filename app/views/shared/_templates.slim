#templates

  script.home-icon(type="text/template")
    .inner
      .icon.dbx-handle{ style="background-image: url(/images/widgets/{{ iconName }}.png)" }
      .title {{ prettyName }}
  
  script.mapp-header(type="text/template")
    .logo{ style="background-image: url(/sample-data/{{ name }}/logo.png)" }
    .name {{ prettyName }}
    .clearfix
  
  script.edit-widget-idle(type="text/template")
    h1 Click an icon
    h2 in the Emulator to begin editing
    h3 OR
    h1 Drag an icon
    h2 from the Sidebar to the Emulator
  
  script.edit-widget(type="text/template")
    .header
      .icon{ style="background-image: url(/images/widgets/{{ iconName }}.png)" }
      .widget-name-edit
        input type="text" name="wname" value="{{ prettyName }}"
      .widget-name
        | {{ prettyName }}
        span.change-label  Click&nbsp;to&nbsp;Change&nbsp;Name
      p.help-text
        em {{ helpText }}
    div class="edit-area {{ wtype }}" {{ editAreaContent }}

    .action-bar
      .accept-btn.main-btn
        .content Save Changes
      .checkmark
      .loader
      .cancel-btn.alt-btn
        .content Discard Changes
      a.remove-link(href="#") Remove Widget
  
  script.edit-tab-bar(type="text/template")
    .header.edit-tab-bar
      .widget-name
        | Editing Tab Bar
      p.help-text
        em Give your users access to key widgets from anywhere on your mobile site.
    div class="edit-area"
      - 3.times do |n|
        .wtab
          h3 = "Tab \##{ n+1 }"
          select name="wtab_1" data-idx="#{ n }"
            option = "==None=="
            | <%
            = "var tabIdx = #{ n };"
            | for (var i=0; i<wnames.length; i++) {
            | var selected = (wtabs[tabIdx] == wnames[i]) ? ' selected="selected"' : '';
            | print('<option'+selected+'>'+util.prettifyName(wnames[i])+'</option>');
            | } %>
  
  script.tab-bar(type="text/template")
    table
      tr
        td.active.go-home
          a href="#" Home
        td.wtab {{ prettyTabs[0] }}
        td.wtab {{ prettyTabs[1] }}
        td.wtab {{ prettyTabs[2] }}

  script.sidebar-widget(type="text/template")
    .sidebar.home-icon data-name="{{ name }}" data-wtype="{{ wtype }}"
      .icon{ style="background-image: url(/images/widgets/{{ iconName }}.png)" }
      .title {{ prettyName }}
  
  script.add-widget-dialog(type="text/template")
    #dialog-confirm title="Please Name your New Widget"
  	  p
  	    span class="ui-icon ui-icon-alert" style="float:left; margin:0 7px 20px 0;"
  	    | Please name your new <b>{{ wtype }}</b> widget:
        input type="text" value="{{ defaultName }}" name="wname"
        | <% if(_maybe.error) { %>
        p.error Error: {{ _maybe.error }}
        | <% } %>
	    .other-names
  	    b Other names in use by this widget type:
  	    ul
    	    | <% for(var i=0; i < names.length; i++) { %>
    	    |    <li> {{ names[i] }} </li>
    	    |  <% } %>
  
  script.add-subcat-dialog(type="text/template")
    #dialog-confirm title="Name your Sub-Category"
      p
        | Please name your Sub-Category:
        input type="text" value="{{ _maybe.name }}" name="cat"
        | <% if(_maybe.error) { %>
        p.error Error: {{ _maybe.error }}
        | <% } %>
        p (Press Enter to add)
        .other-names
    	    b Other Sub-Category names being used in this category:
    	    ul
      	    | <% for(var i=0; i < cats.length; i++) { %>
      	    |    <li> {{ cats[i] }} </li>
      	    |  <% } %>
  
  script.add-item-dialog(type="text/template")
    #dialog-confirm title="Name your Page"
      p
        | Please name your Page:
        input.item-input type="text" name="name" value="{{ name }}"
        input.item-input type="hidden" name="content" value="<p>Change Me</p>"
        | <% if(_maybe.error) { %>
        p.error Error: {{ _maybe.error }}
        | <% } %>
        .other-names
    	    b Other Page names being used in this category:
    	    ul
      	    | <% for(var i=0; i < _items.length; i++) { %>
      	    |    <li> {{ _items[i].name }} </li>
      	    |  <% } %>

  script.widget-page(type="text/template")
    .page
      .back-bar
        .back-btn
        .title
      .content
      .ad-bar
        img src="/images/brandSample04.jpeg"
  
  #dialog-invalid-drag title="Oops"
    p
      span.ui-icon.ui-icon-alert style="float:left"
      | New widgets can only be added to the mobile home screen.
    p Please return to the mobile home screen and try adding again.

