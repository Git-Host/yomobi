  script.booking-page(type="text/template")
    .input-wrap
      p Request a Booking:
      = form_tag "/#{@company.name}/booking/submit", :method => 'post' do
        label Name:
        br
        input name="name" type="text"
        br
        label Phone: 
        br
        input name="phone" type="text"
        br
        label Time (e.g. 7:45pm): 
        br
        = select_tag 'time[h]', options_for_select(1..12, 2)
        = select_tag 'time[m]', options_for_select(%w{00 15 30 45},30)
        = select_tag 'time[p]', options_for_select(%w{am pm}, 'pm')
        br
        label Date: 
        br
        = select_tag 'date[m]', options_for_select(1..12)
        = select_tag 'date[d]', options_for_select(1..31)
        = select_tag 'date[y]', options_for_select(2011..2012)
        br
        span.response
        input(type="submit" value="Send")
    .thanks-wrap style="display:none"
      h3 Your booking request has been sent.
  
  script.informed-page(type="text/template")
    .input-wrap
      p Stay informed with our latest specials, discounts, and announcements. We respect your privacy.
      = form_tag "/#{@company.name}/informed/submit", :method => 'post' do
        | <% if (_maybe.optForEmails) { %>
        label Email Address:
        br
        input type="text" name="email"
        br
        | <% } if (_maybe.optForTexts) { %>
        label Mobile Number:
        br
        input type="text" name="phone"
        br
        label Mobile Service Carrier:
        br
        = select_tag 'carrier', options_for_select(carrier_names)
        br
        | <% } %>
        #recaptcha-container
        span.response
        br
        input(type="submit" value="Send")
    .thanks-wrap style="display:none"
      h3 = "Thanks! You'll be kept up to date with #{@company.name} news."

