  script.hours-edit-area(type="text/template")
    p Click to checkmark the days you are open:
    - %w(sun mon tue wed thu fri sat).each do |day|
      .day-checkbox day=day
        span = day.upcase
        .checkbox day=day class="{{ _maybe.#{day}Status }}"
    .clearfix
    
    - %w(sun mon tue wed thu fri sat).each do |day|
      .day-hours day=day class="{{ _maybe.#{day}Status }}"
        .day-name
          = long_day_name(day)
        .all-day-wrap
          | All Day
          input type="checkbox" name="#{day}_allday"
        
        | <% for (var i=0; i < #{day}FromHours.length; i++) { %>
        .row
          .hour-wrap class=".all-day-{{ _maybe.#{day}AllDay }}"
            label From:
            input.hour.from type="text" value="{{ #{day}FromHours[i] }}"
            label To:
            input.hour.to type="text" value="{{ #{day}ToHours[i] }}"
        | <% } %>
        
        .all-day-label class=".all-day-{{ _maybe.#{day}AllDay }}"
          span Open All Day
        .add-time
          | Add another time
          .plus-icon
    .clearfix

