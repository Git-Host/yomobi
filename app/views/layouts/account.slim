- content_for :css do
  = stylesheet_link_tag 'account'

- content_for :sidebar do
  ul
    li
      a class=active('password',@page) href=account_path = t 'account_settings.change_password'
    li
      a class=active('contact',@page) href=account_path = t 'account_settings.update_contact_info'
    li
      a class=active('payment-history',@page) href=account_payments_path = t 'account_settings.pament_history'

.title
  = yield :title
.inner-content
  = yield

- parent_layout 'application'
